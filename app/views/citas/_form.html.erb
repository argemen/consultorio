      <% end %>
      </ul>
    </div>
  <% end %>
<div class="panel-body nopadding">
	<%= f.hidden_field :paciente_id, :id => 'paciente_id'%>
  <div class="form-group">
    <%= f.label :paciente_id, class: 'col-sm-4 control-label' %>
    <div class="col-sm-8"><%= f.autocomplete_field :paciente_cedula, autocomplete_paciente_cedula_pacientes_path, :update_elements => {:id => '#paciente_id'}, placeholder: 'Ingrese CÃ©dula del Paciente', multiple: false, class: 'form-control', autocomplete: 'off' %></div>
